Date: Fri, 9 Aug 2013 12:30:55 -0500
Subject: [PATCH] sama5: spidev example

Signed-off-by: Robert Nelson <robertcnelson@gmail.com>
---
 arch/arm/boot/dts/sama5d31ek.dts  |    4 ++++
 arch/arm/boot/dts/sama5d34ek.dts  |    4 ++++
 arch/arm/boot/dts/sama5d3xcm.dtsi |    4 ++++
 arch/arm/boot/dts/sama5d3xmb.dtsi |    8 ++++++++
 4 files changed, 20 insertions(+)

diff --git a/arch/arm/boot/dts/sama5d31ek.dts b/arch/arm/boot/dts/sama5d31ek.dts
index 027bac7..8c3074a 100644
--- a/arch/arm/boot/dts/sama5d31ek.dts
+++ b/arch/arm/boot/dts/sama5d31ek.dts
@@ -20,6 +20,10 @@
 				status = "okay";
 			};
 
+			spi1: spi@f8008000 {
+				status = "okay";
+			};
+
 			ssc0: ssc@f0008000 {
 				status = "okay";
 			};
diff --git a/arch/arm/boot/dts/sama5d34ek.dts b/arch/arm/boot/dts/sama5d34ek.dts
index fb8ee11..9f86678 100644
--- a/arch/arm/boot/dts/sama5d34ek.dts
+++ b/arch/arm/boot/dts/sama5d34ek.dts
@@ -20,6 +20,10 @@
 				status = "okay";
 			};
 
+			spi1: spi@f8008000 {
+				status = "okay";
+			};
+
 			ssc0: ssc@f0008000 {
 				status = "okay";
 			};
diff --git a/arch/arm/boot/dts/sama5d3xcm.dtsi b/arch/arm/boot/dts/sama5d3xcm.dtsi
index 1f80508..1faf046 100644
--- a/arch/arm/boot/dts/sama5d3xcm.dtsi
+++ b/arch/arm/boot/dts/sama5d3xcm.dtsi
@@ -36,6 +36,10 @@
 				cs-gpios = <&pioD 13 0>, <0>, <0>, <0>;
 			};
 
+			spi1: spi@f8008000 {
+				cs-gpios = <&pioC 25 0>, <0>, <0>, <0>;
+			};
+
 			macb0: ethernet@f0028000 {
 				phy-mode = "rgmii";
 			};
diff --git a/arch/arm/boot/dts/sama5d3xmb.dtsi b/arch/arm/boot/dts/sama5d3xmb.dtsi
index 8a9e05d..3ebf909 100644
--- a/arch/arm/boot/dts/sama5d3xmb.dtsi
+++ b/arch/arm/boot/dts/sama5d3xmb.dtsi
@@ -32,6 +32,14 @@
 				};
 			};
 
+			spi1: spi@f8008000 {
+				spidev@0 {
+					compatible = "linux,spidev";
+					spi-max-frequency = <50000000>;
+					reg = <0>;
+				};
+			};
+
 			/*
 			 * i2c0 conflicts with ISI:
 			 * disable it to allow the use of ISI
