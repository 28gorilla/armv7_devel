diff --git a/arch/arm/boot/dts/sama5d31ek.dts b/arch/arm/boot/dts/sama5d31ek.dts
index 04eec0d..c263436 100644
--- a/arch/arm/boot/dts/sama5d31ek.dts
+++ b/arch/arm/boot/dts/sama5d31ek.dts
@@ -17,6 +17,10 @@
 
 	ahb {
 		apb {
+			hlcdc: hlcdc@f0030000 {
+				status = "okay";
+			};
+
 			spi0: spi@f0004000 {
 				status = "okay";
 			};
@@ -39,6 +43,28 @@
 		};
 	};
 
+	panel {
+		compatible = "atmel,hlcdc,panel";
+		invert-hsync;
+		invert-vsync;
+		status = "okay";
+		display-timings {
+			800x480p60 {
+				clock-frequency = <33260000>;
+				hactive = <800>;
+				vactive = <480>;
+				hfront-porch = <168>;
+				hback-porch = <88>;
+				hsync-len = <64>;
